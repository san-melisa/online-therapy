<div class="content">
    <h1>Expertises Areas</h1>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header my-header">
                    Add Expertise Area
                </div>
                <div class="card-body">
                    <form action="" method="POST" enctype="multipart/form-data">
                        <div class="form-group mb-2">
                            <label for="expertise-area">Expertise Area:</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter expertise area"
                                required="required" data-validation-required-message="Please enter expertise area">
                        </div>
                        <button type="submit" class="base-button purple-btn">Add</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header my-header">
                    Expertise Areas
                </div>
                <div class="card-body">
                    <table class="table table-striped">
                        <thead class="custom-thead">
                            <tr>
                                <th>Expertise Area</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each expertises}}
                            <tr>
                                <td>{{name}}</td>
                                <td>
                                    <div class="d-flex justify-content-end">
                                        <button type="button" class="btn btn-sm btn-primary" data-toggle="modal"
                                            data-target="#editExpertiseModal" data-expertise-id="{{id}}"
                                            data-expertise-name="{{name}}" style="margin-right: 2px;">
                                            <i class="fas fa-edit"></i> Edit
                                        </button>
                                        <form action="/admin/expertises/{{id}}?_method=DELETE" method="POST">
                                            <button type="submit" class="btn btn-sm btn-danger"><i
                                                    class="fas fa-trash-alt"></i> Delete</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
<!-- Add this code right before the closing </body> tag -->
<div class="modal" id="editExpertiseModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Expertise Area</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="" method="POST" id="editExpertiseForm"  enctype="application/x-www-form-urlencoded">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="editExpertiseArea">Expertise Area:</label>
                        <input type="text" class="form-control" name="name" id="editExpertiseArea"
                            placeholder="Enter expertise area" required="required"
                            data-validation-required-message="Please enter expertise area">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-secondary">Save changes</button>
                </div>
            </form>
        </div>
    </div>
</div>