<div class="small-banner">
    <h1 class="banner-title">Sign In</h1>
</div>
<div class="container mt-5 mb-5">
    {{#if sessionFlash}}
    <div class="{{sessionFlash.type}}" style="text-align: center; 
    background-color: #2d2222; border-radius: 5px;">{{sessionFlash.message}}</div>
    {{/if}}
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/users/signin" method="POST">
                <div class="form-group">
                    <label for="email">Email Address *</label>
                    <input type="email" class="form-control" name="email" value="{{values.email}}">
                    {{#each errors}}
                    {{#if (eq this.param "email")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                    {{#each loginErrors}}
                    {{#if (eq this.param "email")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="form-group">
                    <label for="password">Password *</label>
                    <input type="password" class="form-control" name="password">
                    {{#each errors}}
                    {{#if (eq this.param "password")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                    {{#each loginErrors}}
                    {{#if (eq this.param "password")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="forgot-password">
                    <a href="/users/forgotpassword">Forgot password?</a>
                </div>
                <div class="btn-centered">
                    <button type="submit" class="base-button purple-btn mt-3">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
