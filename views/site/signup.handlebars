<div class="small-banner">
    <h1 class="banner-title">Sign Up</h1>
</div>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/users/signup" method="POST">
                <div class="form-group">
                    <label for="firstName">First Name *</label>
                    <input type="text" class="form-control" id="firstName" name="name" value="{{values.name}}">
                    {{#each errors}}
                    {{#if (eq this.param "name")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="form-group">
                    <label for="lastName">Last Name *</label>
                    <input type="text" class="form-control" id="lastName" name="surname" value="{{values.surname}}">
                    {{#each errors}}
                    {{#if (eq this.param "surname")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                    <div class="form-group">
                        <label for="email">Email Address *</label>
                        <input type="email" class="form-control" id="email" name="email" value="{{values.email}}">
                        {{#each errors}}
                        {{#if (eq this.param "email")}}
                        <div class="alert custom-alert p-0 mb-1" role="alert">
                            {{this.msg}}
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>
                    <div class="form-group">
                        <label for="password">Password *</label>
                        <input type="password" class="form-control" id="password" name="password">
                        {{#each errors}}
                        {{#if (eq this.param "password")}}
                        <div class="alert custom-alert p-0 mb-1" role="alert">
                            {{this.msg}}
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password *</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                        {{#each errors}}
                        {{#if (eq this.param "confirmPassword")}}
                        <div class="alert custom-alert p-0 mb-1" role="alert">
                            {{this.msg}}
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>

                    <div class="form-group form-check mt-4">

                        <input type="checkbox" class="form-check-input" id="ageCheck" name="ageCheck">
                        <label class="form-check-label" for="ageCheck">I am over 18 years old</label>
                    </div>
                    {{#each errors}}
                    {{#if (eq this.param "ageCheck")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}


                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" id="termsCheck" name="termsCheck">
                        <label class="form-check-label" for="termsCheck">I have read, understood, and accept
                            <a href="/terms" target="_blank">terms of service</a> and
                            <a href="/privacy" target="_blank">privacy policy</a>
                        </label>
                    </div>
                    {{#each errors}}
                    {{#if (eq this.param "termsCheck")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}


                    <div class="btn-centered">
                        <button type="submit" class="base-button purple-btn mt-3">Register</button>
                    </div>
            </form>
        </div>
    </div>
</div>
