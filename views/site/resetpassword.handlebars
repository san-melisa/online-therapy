<div class="small-banner">
    <h1 class="banner-title">Reset Password</h1>
</div>
<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form action="/users/resetpassword/{{token}}" method="POST">
                <input type="hidden" name="token" value="{{token}}">
                <div class="form-group">
                    <label for="password">New Password *</label>
                    <input type="password" class="form-control" name="password">
                    {{#each errors}}
                    {{#if (eq this.param "password")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password *</label>
                    <input type="password" class="form-control" name="confirmPassword">
                    {{#each errors}}
                    {{#if (eq this.param "confirmPassword")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="btn-centered">
                    <button type="submit" class="base-button purple-btn mt-3">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>