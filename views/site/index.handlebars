<!-- Start of Banner-->
<div class="banner">
    <div class="banner-content">
        <h1 class="headline">Free Online Therapy</h1>
        <p class="subheadline">Personalized Online Therapy Sessions Provided by Caring Volunteers</p>
        <button class="base-button extra-btn"> <a href="/#therapists-section" style="color:white;text-decoration:none;">
                Find a Therapist</a> </button>
    </div>
</div>
<!-- End of Banner-->

<!-- Start of How to use?-->
<div class="container-fluid mt-5 mb-5 bg-light p-5">
    <h2 class="title">How to Start Therapy at Therapy Treasure?</h2>
    <div class="row mt-5">
        <div class="col-md-4">
            <h3><span class="step-number">1</span> Choose a Psychologist</h3>
            <p>Select a professional who meets your criteria and with whom you feel comfortable.</p>
        </div>
        <div class="col-md-4">
            <h3><span class="step-number">2</span> Free Consultation</h3>
            </h3>
            <p>Take advantage of the kindness of our volunteer therapists as they provide free therapy sessions that
                support your wellbeing.</p>
        </div>
        <div class="col-md-4">
            <h3><span class="step-number">3</span> Start Therapy</h3>
            <p>Schedule a suitable appointment and start your session immediately.</p>
        </div>
    </div>
</div>
<!-- End How to use?-->

<!--Start of Content-->
<!--Start of Sidebar-->
<div class="container-fluid" id="therapists-section">
    <div class="row">
        <div class="col-md-3 mt-4 ">
            <div class="sidebar bg-light p-3 mt-3">
                <form action="/therapist/search#therapists-section" method="GET">
                    <div class="input-group mb-5">
                        <input type="text" class="form-control search-input" name="search" placeholder="Search"
                            aria-label="Search">
                        <button class="btn search-icon-btn" type="submit">
                            <i class="fas fa-search" style="color:#5e548e;"></i>
                        </button>
                    </div>
                </form>
                <h5>Our Therapists</h5>
                {{#each categories}}
                <div class="form-check">
                    <input class="form-check-input category-checkbox" type="checkbox" value="{{_id}}" id="{{_id}}">
                    <label class="form-check-label" for="{{_id}}">{{name}}</label>
                </div>
                {{/each}}
                <h5 class="mt-4">Reasons for Application</h5>
                <form>
                    {{#each expertises}}
                    <div class="form-check">
                        <input class="form-check-input expertise-checkbox" type="checkbox" value="{{_id}}" id="{{_id}}">
                        <label class="form-check-label" for="{{_id}}">
                            {{name}}
                        </label>
                    </div>
                    {{/each}}
                </form>
            </div>
        </div>
        <!--Start of Therapists-->

        <div class="col-md-9 mt-4">
            <div class="row">
                {{#each therapists}}
                <div class="col-md-11 mb-4 mx-auto therapist-card" data-expertises="{{areasToString expertiseAreas}}"
                    data-category="{{areasToString categoryAreas}}">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2">
                                    <img src="{{ photoUrl }}" alt="{{ name }}" class="img-fluid">
                                </div>
                                <div class="col-md-4 mt-5">
                                    <h5 class="card-title">{{user_id.name}} {{user_id.surname}}</h5>
                                    <h6 class="card-subtitle mb-2">{{title}}</h6>
                                    <div class="mt-4">
                                        <button class="base-button purple-btn large-btn">
                                            <a href="/booking/{{_id}}" style="text-decoration: none; color: white;">Book
                                                Appointment</a></button>
                                        <button class="base-button gray-btn large-btn">
                                            <a href="/therapist/{{_id}}" style="color:white;text-decoration:none;"> More
                                                Information</a>
                                        </button>
                                    </div>
                                </div>
                                <div class="col-md-1 d-flex align-items-center">
                                    <div class="vertical-divider"></div>
                                </div>
                                <div class="col-md-5 mt-3">
                                    <h6 class="card-subtitle mb-2">About the Therapist</h6>
                                    <p class="card-text">
                                        {{truncate about 200}}...<a href="/therapist/{{_id}}"
                                            style="color:#5e548e;">Read More</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <button class="base-button purple-btn " id="load-more">Show More</button>
                </div>
            </div>
        </div>

        <!--End of Therapists-->

    </div>
</div>
<!--End of Sidebar-->

<!-- Start of Info -->
