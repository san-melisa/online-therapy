<div class="small-banner">
    <h1 class="banner-title">Contact</h1>
</div>
<div class="container mt-5 mb-5">
    <div class="row">
          <div class="col-md-6 offset-md-3">
            {{#if sessionFlash.message}}
            <div class="{{sessionFlash.type}}"> {{sessionFlash.message}}</div>
            {{/if}}
            <form method="POST" action="/contact/messagesend">
                <div class="form-group ">
                    <label for="name">Name *</label>
                    <input type="text" class="form-control" name="name" value="{{values.name}}">
                    {{#each errors}}
                    {{#if (eq this.param "name")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="form-group ">
                    <label for="surname">Surname *</label>
                    <input type="text" class="form-control" name="surname" value="{{values.surname}}">
                    {{#each errors}}
                    {{#if (eq this.param "surname")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="form-group ">
                    <label for="email">Email address *</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" value="{{values.email}}">
                    {{#each errors}}
                    {{#if (eq this.param "email")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="form-group">
                    <label for="phone">Phone number</label>
                    <input type="tel" class="form-control" name="phone">
                </div>
                <div class="form-group ">
                    <label for="message">Message *</label>
                    <textarea class="form-control" name="message" rows="3" value="{{values.message}}"></textarea>
                    {{#each errors}}
                    {{#if (eq this.param "message")}}
                    <div class="alert custom-alert p-0 mb-1" role="alert">
                        {{this.msg}}
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                <div class="btn-centered">
                    <button type="submit" class="base-button purple-btn mt-3">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>